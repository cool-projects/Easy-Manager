@using EasyManagerClasses
@model Members

@{
    var base64 = Convert.ToBase64String(Model.ImageFile);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
}
<div class="col-md-2 profile-main text-center">
    <img src="@imgSrc" class="img-circle center-block" alt="Avatar">
    <br/>
    <br />
    <br />
    <div><a href="@Url.Action("MemberEdit", "Member", new { ID = Model.MemberId })" class="btn btn-primary">Edit Member Info</a><br /></div>
</div>
<div class="col-md-10">
    <div class="col-sm-4">
        <div class="form-group">
            <label class="control-label col-sm-5" style="text-align: left">Title:</label>
            <div class="col-sm-7">
                <label class="control-label" style="color:#149599; font-style:italic">@Model.Title</label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-5" style="text-align: left">First Name(s):</label>
            <div class="col-sm-7">
                <label class="control-label" style="color:#149599; font-style:italic">@Model.FirstName</label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-5" style="text-align: left">Surname:</label>
            <div class="col-sm-7">
                <label class="control-label" style="color:#149599; font-style:italic">@Model.LastName</label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-5" style="text-align: left">Date of Birth:</label>
            <div class="col-sm-7">
                <label class="control-label" style="color:#149599; font-style:italic">@Model.DateOfBirth.ToString("dd-MM-yyyy")</label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-5" style="text-align: left">Gender:</label>
            <div class="col-sm-7">
                <label class="control-label" style="color:#149599; font-style:italic">@Model.Gender</label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-5" style="text-align: left">Nationality:</label>
            <div class="col-sm-7">
                <label class="control-label" style="color:#149599; font-style:italic">@Model.Nationality</label>
            </div>
        </div>

    </div>
    <div class="col-sm-4">
        <div class="form-group">
            <label class="control-label col-sm-4" style="text-align: left">Membership No:</label>
            <div class="col-sm-8">
                <label class="control-label" style="color:#149599; font-style:italic">@Model.MembershipNumber</label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-5" style="text-align: left">ID No / Passport No:</label>
            <div class="col-sm-7">
                <label class="control-label" style="color:#149599; font-style:italic">@Model.IdentityNumber</label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-5" style="text-align: left">Member Type:</label>
            <div class="col-sm-7">
                <div>
                    <label class="control-label" style="color:#149599; font-style:italic">@Model.MembershipType</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-5" style="text-align: left">Member Status:</label>
            <div class="col-sm-7">
                <label class="control-label" style="color:#149599; font-style:italic">@Model.MembershipStatus</label>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-group">
            <label class="control-label col-sm-5" style="text-align: left">Contact No:</label>
            <div class="col-sm-7">
                <label class="control-label" style="color:#149599; font-style:italic">@Model.Cellphone</label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-5" style="text-align: left">Address:</label>
            <div class="col-sm-7">
                <label class="control-label" style="color:#149599; font-style:italic">@Model.Address</label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-5" style="text-align: left">City:</label>
            <div class="col-sm-7">
                <label class="control-label" style="color:#149599; font-style:italic">@Model.City</label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-5" style="text-align: left">Province:</label>
            <div class="col-sm-7">
                <label class="control-label" style="color:#149599; font-style:italic">@Model.Province</label>
            </div>
        </div>
    </div>
</div>

