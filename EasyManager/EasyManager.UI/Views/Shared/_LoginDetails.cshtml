@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color:#F1C40F">
                <img src="~/Images/user.png" class="img-circle" alt="Avatar">
                <span style="color:#F1C40F">@User.Identity.GetUserName()</span> <i class="icon-submenu lnr lnr-chevron-down"></i>
            </a>
            <ul class="dropdown-menu">
                <li><a href="#"><i class="lnr lnr-user"></i> <span>My Profile</span></a></li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="lnr lnr-exit"></i>Logout</a></li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color:#F1C40F">
                <img src="~/Images/user.png" class="img-circle" alt="Avatar">
                <span style="color:#F1C40F">You are not logged in.</span>
            </a>
        </li>
    </ul>
}